  <div class="container">
    <main>
      <div class="py-5 text-center">
        <h2>チェックアウトフォーム</h2>
        <p class="lead">購入処理をしてください</p>
      </div>
      <div class="row g-5">
        <div class="col-md-5 col-lg-4 order-md-last">
          <h4 class="d-flex justify-content-between align-items-center">
            <span class="text-primary">カート</span>
            <span class="badge bg-primary rounded-pill"><%= @cart_items.count %></span>
          </h4>
          <ul class="list-group mb-3">
            <% @cart_items.each do |cart_item| %>
              <li class="list-group-item d-flex align-items-center">
                <div class="me-auto">
                  <h6 class="my-0"><%= cart_item.item.name %></h6>
                </div>
                <span class="text-body-secondary me-3"><%= cart_item.quantity %>個</span>
                <span class="text-body-secondary me-3"><%= cart_item.item.price * cart_item.quantity %>円</span>
                <%= button_to '削除', cart_item_path(cart_item.id), params: { item_id: cart_item.item.id }, method: :delete, class: "btn btn-outline-dark mt-auto" %>
              </li>
            <% end %>
            <li class="list-group-item d-flex justify-content-between bg-body-tertiary align-items-center">
              <div class="text-success">
                <h6 class="my-0">プロモーションコード</h6>
                <small>サンプルコード</small>
              </div>
              <span class="text-success">0</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <div class="list-inline">
                <span>合計</span>
              </div>
              <strong><%= @total_price %>円</strong>
            </li>
          </ul>
          <form class="card p-2">
            <div class="input-group">
              <input type="text" class="form-control" placeholder="Promo code">
              <button type="submit" class="btn btn-secondary">Redeem</button>
            </div>
          </form>
        </div>
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">請求先</h4>
          <%#= form_with model: Order.new, url: checkout_path , local: true do |form| %>
          <%= form_with model: @order, url: checkout_path , local: true do |form| %>
              <%= render partial: 'shared/error_messages', locals: { object: form.object } %>
              <div class="row g-3">
                <div class="col-sm-6">
                  <%= form.label :last_name, '姓' %>
                  <%#= form.text_field 'order[last_name]', class:"form-control" %>
                  <%= form.text_field :last_name, maxlength: 10, class:"form-control" %>
                </div>
                <div class="col-sm-6">
                  <%= form.label :first_name, '名' %>
                  <%#= form.text_field 'order[first_name]', class:"form-control" %>
                  <%= form.text_field :first_name, maxlength: 10, class:"form-control" %>
                </div>
                <div class="col-12">
                  <%= form.label :user_name, 'ユーザー名' %>
                  <%#= form.text_field 'order[user_name]', class: "form-control", placeholder: "Username" %>
                  <%= form.text_field :user_name, class: "form-control", maxlength: 10, placeholder: "Username" %>
                </div>
                <div class="col-12">
                  <%= form.label :email, 'メールアドレス' %>
                  <%#= form.text_field 'order[email]', class: "form-control", placeholder: "you@example.com" %>
                  <%= form.text_field :email, class: "form-control", maxlength: 255, placeholder: "you@example.com" %>
                </div>
                <div class="col-md-5">

                  <%= form.label :country, '国', class: "form-label" %>
                  <%#= form.select 'order[country]', ['日本'], class: "form-select", id: "country" %>
                  <%= form.select :country, ['日本'], class: "form-select", id: "country" %>
                </div>
                <div class="col-md-4">

                  <%= form.label :prefecture, '県', class: "form-label" %>
                  <%#= form.select 'order[prefecture]', ['東京'], class: "form-select", id: "prefecture" %>
                  <%= form.select :prefecture, ['東京'], class: "form-select", id: "prefecture" %>
                </div>
                <div class="col-md-3">

                  <%= form.label :zip_code, class: "form-label" %>
                  <%#= form.text_field 'order[zip_code]', class: "form-control", id: "zip" %>
                  <%= form.text_field :zip_code, class: "form-control", maxlength: 8, id: "zip" %>
                </div>
                <div class="col-12">
                  <%= form.label :required_address, '住所(番地)' %>
                  <%#= form.text_field 'order[required_address]', class: "form-control", placeholder: "〇〇県〇〇市1丁目1番" %>
                  <%= form.text_field :required_address, class: "form-control", maxlength: 30, placeholder: "〇〇市1丁目1番" %>
                </div>
                <div class="col-12">

                  <%= form.label :optional_address, '住所(建物名等)' %>
                  <%#= form.text_field 'order[optional_address]', class: "form-control", placeholder: "〇〇マンション1F 1号室" %>
                  <%= form.text_field :optional_address, class: "form-control", maxlength: 30, placeholder: "〇〇マンション1F 1号室" %>
                </div>
              </div>
              <hr class="my-4">
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="same-address">
                <label class="form-check-label" for="same-address">Shipping address is the same as my billing address</label>
              </div>
              <div class="form-check">
                <input type="checkbox" class="form-check-input" id="save-info">
                <label class="form-check-label" for="save-info">Save this information for next time</label>
              </div>
              <hr class="my-4">
              <h4 class="mb-3">Payment</h4>
              <div class="row gy-3">
                <div class="col-md-6">
                  <%= form.label :credit_card_number, "カード番号", class: "form-label" %>
                  <%#= form.text_field 'order[credit_card_number]', class: "form-control", id: "cc-number" %>
                  <%= form.text_field :credit_card_number, class: "form-control", maxlength: 15, id: "cc-number" %>
                </div>
                <div class="col-md-3">
                  <%= form.label :cvv, "CVV", class: "form-label" %>
                  <%#= form.text_field 'order[cvv]', class: "form-control", id: "cc-cvv" %>
                  <%= form.text_field :cvv, class: "form-control", maxlength: 3, id: "cc-cvv" %>
                </div>
              </div>
              <hr class="my-4">
              <% session[:total_price] = @total_price %>
              <%= form.submit "購入する", class: "w-100 btn btn-primary btn-lg" %>
          <% end %>
        </div>
      </div>
    </main>
  </div>
