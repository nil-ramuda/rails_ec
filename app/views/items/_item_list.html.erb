<% @items.each do |item| %>
  <div class="col mb-5">
    <div class="card h-100">
      <!-- Product image-->
      <%= image_tag item.image %>
      <!-- Product details-->
      <div class="card-body p-4">
        <div class="text-center">
          <!-- Product name-->
          <h5 class="fw-bolder"><%= item.name %></h5>
          <!-- Product price-->
          <%= "#{item.price}円" %>
        </div>
      </div>
      <!-- Product actions-->
      <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
        <div class="text-center"><%= link_to '商品を見る', item_path(id: item.id), class: "btn btn-outline-dark mt-auto" %></div>
        <div class="text-center"><%= button_to 'カートに入れる', cart_items_path, params: { quantity: 1, item_id: item.id }, class: "btn btn-outline-dark mt-auto" %></div>
      </div>
    </div>
  </div>
<% end %>
