<%= form_with model: [:admin, @item], local: true do |form| %>
  <%= render partial: 'shared/error_messages', locals: { object: form.object } %>
  <div class="form_group pt-4 pb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
    <%= form.label :price %>
    <%= form.text_field :price, class: "form-control" %>
    <%= form.label :detail %>
    <%= form.text_area :detail, class: "form-control" %>
    <%= form.label :image %>
    <%= form.file_field :image %>
    <%= form.submit %>
  </div>
<% end %>
